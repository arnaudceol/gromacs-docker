#!/usr/bin/env bash
if [ "$GROMACS_ARCH" = "final" ];
then
    echo 'rel'
    echo `pwd`
    echo 'rel'
    echo `ls`
    echo 'rel'
    echo $DOCKERFILE_PATH
    cd $DOCKERFILE_PATH
    mv -f final $DOCKERFILE_PATH
    cd
    docker build --build-arg GROMACS_ARCH=$GROMACS_ARCH -f $DOCKERFILE_PATH -t $IMAGE_NAME .;
else docker build --build-arg GROMACS_ARCH=$GROMACS_ARCH -f $DOCKERFILE_PATH -t $IMAGE_NAME .;
fi;

